// Ignore Spelling: Aufgabe

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Aufgabe15
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("=== Tannenbaum Zeichner ===");
            Console.WriteLine();

            // Benutzereingaben
            int stammBreite = GetUserInput("Wie breit soll der Stamm sein? ");
            int stammHoehe = GetUserInput("Wie hoch soll der Stamm sein? ");
            int kronenHoehe = GetUserInput("Wie hoch soll die Krone sein? ");

            Console.WriteLine();
            Console.WriteLine("Hier ist Ihr Tannenbaum:");
            Console.WriteLine();

            // Zeichne die Krone
            ZeichneKrone(kronenHoehe);

            // Zeichne den Stamm
            ZeichneStamm(stammBreite, stammHoehe, kronenHoehe);

            Console.WriteLine();
            Console.WriteLine("Drücken Sie eine beliebige Taste zum Beenden...");
            Console.ReadKey();
        }

        static int GetUserInput(string prompt)
        {
            int wert;
            do
            {
                Console.Write(prompt);
                string eingabe = Console.ReadLine();
                
                if (int.TryParse(eingabe, out wert) && wert > 0)
                {
                    return wert;
                }
                
                Console.WriteLine("Bitte geben Sie eine gültige positive Zahl ein.");
            } while (true);
        }

        static void ZeichneKrone(int hoehe)
        {
            // Berechne die Anzahl der Schichten basierend auf der Höhe
            int schichten = Math.Max(1, hoehe / 3);
            int zeilenProSchicht = hoehe / schichten;
            int restZeilen = hoehe % schichten;
            
            int maxBreite = 0;
            int aktuelleZeile = 0;

            for (int schicht = 0; schicht < schichten; schicht++)
            {
                // Berechne die Höhe dieser Schicht
                int schichtHoehe = zeilenProSchicht;
                if (schicht < restZeilen)
                    schichtHoehe++;

                // Die erste Schicht startet mit 1 Stern, nachfolgende überlappen
                int startBreite = schicht == 0 ? 1 : Math.Max(1, maxBreite - 2);
                
                for (int i = 0; i < schichtHoehe; i++)
                {
                    // Berechne die Breite für diese Zeile
                    int breite = startBreite + 2 * i;
                    
                    // Berechne die Zentrierung basierend auf der maximalen Breite der gesamten Krone
                    int gesamtMaxBreite = 1 + 2 * (hoehe - 1);
                    int leerzeichen = (gesamtMaxBreite - breite) / 2;

                    // Zeichne die Leerzeichen
                    for (int j = 0; j < leerzeichen; j++)
                    {
                        Console.Write(" ");
                    }

                    // Zeichne die Sterne
                    for (int j = 0; j < breite; j++)
                    {
                        Console.Write("*");
                    }

                    Console.WriteLine();
                    aktuelleZeile++;
                    
                    // Aktualisiere die maximale Breite
                    if (breite > maxBreite)
                        maxBreite = breite;
                }
            }
        }

        static void ZeichneStamm(int breite, int hoehe, int kronenHoehe)
        {
            // Berechne die maximale Kronenbasis für die Zentrierung
            int gesamtMaxBreite = 1 + 2 * (kronenHoehe - 1);
            int stammOffset = (gesamtMaxBreite - breite) / 2;

            for (int i = 0; i < hoehe; i++)
            {
                // Zeichne die Leerzeichen für die Zentrierung
                for (int j = 0; j < stammOffset; j++)
                {
                    Console.Write(" ");
                }

                // Zeichne den Stamm
                for (int j = 0; j < breite; j++)
                {
                    Console.Write("*");
                }

                Console.WriteLine();
            }
        }
    }
}
